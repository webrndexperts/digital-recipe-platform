{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 2,
    "name": "drp/recipe-slider",
    "title": "Recipe Slider",
    "category": "media",
    "icon": "images-alt2",
    "description": "A responsive slider for displaying testimonials.",
    "editorScript": "file:./build/index.js",
    "style": "file:./build/style-index.css",
    "script": "file:./build/frontend.js",
    "render": "file:./render.php",
    "attributes": {
        "testimonials": {
            "type": "array",
            "default": [],
            "items": {
                "type": "object",
                "properties": {
                    "text": {
                        "type": "string",
                        "default": ""
                    },
                    "author": {
                        "type": "string",
                        "default": ""
                    },
                    "imageId": {
                        "type": "number"
                    },
                    "imageUrl": {
                        "type": "string",
                        "default": ""
                    }
                }
            }
        },
        "slidesPerView": {
            "type": "number",
            "default": 1
        },
        "delay": {
            "type": "number",
            "default": 1000
        },
        "loop": {
            "type": "boolean",
            "default": false
        },
        "autoplay": {
            "type": "boolean",
            "default": false
        },
        "showArrows": {
            "type": "boolean",
            "default": true
        },
        "showDots": {
            "type": "boolean",
            "default": true
        },
        "breakpoints": {
            "type": "object",
            "default": {}
        }
    }
}
